        "@rwh/keystrokes": "^1.4.0",
        "@types/pixi.js": "^5.0.0",
        "pixi-cull": "^2.1.1",
        "pixi-viewport": "^5.0.2",
        "pixi.js": "^7.3.2",
        "sat": "^0.9.0",
